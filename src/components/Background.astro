---
interface Props {
    title_background: string;
    adress_esmeralda: string;
    title_btn: string;
    map_url: string;
    video_background: string;
}

const props = Astro.props;
---

<section id="ubicacion" class="relative h-full w-full">
    <!-- VIDEO DE FONDO -->
    <video
        autoplay
        muted
        loop
        playsinline
        class="absolute top-0 left-0 w-full h-full object-cover z-0"
    >
        <source src={props.video_background} type="video/mp4" />
        Tu navegador no soporta videos HTML5.
    </video>

    <!-- CAPA OSCURA Y CONTENIDO -->
    <div
        class="relative z-10 w-full h-full bg-slate-950 bg-opacity-30 flex flex-col justify-center items-center space-y-12 pt-32 pb-32"
    >
        <h2
            class="title text-2xl sm:text-3xl lg:text-5xl font-bold text-white title-bg"
        >
            {props.title_background}
        </h2>
        <p class="p-desc text-white font-bold text-center">
            {props.adress_esmeralda}
        </p>
        <a href={props.map_url}>
            <button
                class="bg-btn text-white px-6 py-4 rounded-md hover:bg-slate-700"
            >
                {props.title_btn}
            </button></a
        >
    </div>
</section>

<script src="/src//JS/map.js"></script>
