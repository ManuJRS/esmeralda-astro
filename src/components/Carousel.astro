    colorada_price: string;
    colorada_long_description: string;
    colorada_mix: string;
    colorada_flavor: string;
    colorada_pairing: string;
    colorada_visual_color: string;
    colorada_ibu: string;
    colorada_alcohol_volume: string;
    image_colorada: string;

    oasis_main_title: string;
    oasis_style: string;
    oasis_short_description: string;
    oasis_name_title: string;
    oasis_price: string;
    oasis_long_description: string;
    oasis_mix: string;
    oasis_flavor: string;
    oasis_pairing: string;
    oasis_visual_color: string;
    oasis_ibu: string;
    oasis_alcohol_volume: string;
    image_oasis: string;

    yucatan_main_title: string;
    yucatan_style: string;
    yucatan_short_description: string;
    yucatan_name_title: string;
    yucatan_price: string;
    yucatan_long_description: string;
    yucatan_mix: string;
    yucatan_flavor: string;
    yucatan_pairing: string;
    yucatan_visual_color: string;
    yucatan_ibu: string;
    yucatan_alcohol_volume: string;
    image_yucatan: string;

    celestun_main_title: string;
    celestun_style: string;
    celestun_short_description: string;
    celestun_name_title: string;
    celestun_price: string;
    celestun_long_description: string;
    celestun_mix: string;
    celestun_flavor: string;
    celestun_pairing: string;
    celestun_visual_color: string;
    celestun_ibu: string;
    celestun_alcohol_volume: string;
    image_celestun: string;
}

const props = Astro.props;
---

<!-- Carousel -->
<div class="carousel">
    <div class="list">
        <div class="item">
            <img src={props.image_celestun} alt="" />
            <div class="intro">
                <div class="beer-row">
                    <div class="beer-container">
                        <div class="beer-mug beer-yuca">
                            <div class="foam"></div>
                            <div class="beer"></div>
                            <div class="stripes"></div>
                            <!-- NUEVO -->
                            <div class="bubbles">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                            <div class="handle"></div>
                        </div>
                    </div>
                    <div class="title">{props.celestun_main_title}</div>
                </div>
                <div class="topic">{props.celestun_style}</div>
                <div class="des">{props.celestun_short_description}</div>
                <button class="seeMore"> Ver Más &#8599 </button>
            </div>
            <div class="detail">
                <div class="title">{props.celestun_name_title}</div>
                <div class="">
                    <strong>{props.celestun_price}</strong>
                </div>
                <div class="des">{props.celestun_long_description}</div>
                <div class="specification">
                    <div>
                        <p class="p-title">Mezcla</p>
                        <p class="p-desc">{props.celestun_mix}</p>
                    </div>
                    <div>
                        <p class="p-title">Sabor</p>
                        <p class="p-desc">
                            {props.celestun_flavor}
                        </p>
                    </div>
                    <div>
                        <p class="p-title">Combina con</p>
                        <p class="p-desc">{props.celestun_pairing}</p>
                    </div>
                    <div>
                        <p class="p-title">Color</p>
                        <p class="p-desc">{props.celestun_visual_color}</p>
                    </div>
                    <div>
                        <p class="p-title">Ibu</p>
                        <p class="p-desc">{props.celestun_ibu}</p>
                    </div>
                    <div>
                        <p class="p-title">Volumen de alcohol</p>
                        <p class="p-desc">{props.celestun_alcohol_volume}</p>
                    </div>
                </div>
            </div>
        </div>
        <!--item 2-->
        <div class="item">
            <img src={props.image_colorada} alt="Cerveza colorada" />
